{
  "manifest_version": 3,
  "name": "X 关注列表提取器",
  "version": "1.0",
  "description": "一键获取 X (Twitter) 用户的关注列表并导出为 JSON",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://*.x.com/*",
    "https://*.twitter.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.x.com/*/following",
        "https://*.twitter.com/*/following"
      ],
      "js": ["content.js"]
    }
  ]
}
